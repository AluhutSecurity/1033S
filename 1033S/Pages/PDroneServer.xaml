<UserControl x:Class="_1033S.Pages.PDroneServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_1033S.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">
        <StackPanel Name="DroneServerStackPanel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Port" Margin="10 5" Width="60"></TextBlock>
                <TextBox Width="100" Height="20" Text="{Binding Path=Port, Mode=TwoWay}" Margin="10 5"/>            
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="LocalIP" Margin="10 5" Width="60"/>
                <TextBox Width="100" Height="20" Text="{Binding Port, Mode=TwoWay}" Margin="10 5"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Width="100" Height="25" Content="Start" Margin="90 5" Name="DroneServer_StartStopButton" Click="DroneServer_StartStopButton_Click"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</UserControl>
